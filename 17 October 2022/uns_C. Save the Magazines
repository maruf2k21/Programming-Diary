#include<bits/stdc++.h>
#define endl '\n'
#define ll long long int
using namespace std;


int main()
{
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);

	int tst;
	cin>>tst;
	while(tst--)
	{
		int n;
		cin>>n;
		string s,s2;
		cin>>s;
		s2=s;
		int arr[n];
		for(int i=0; i<n;i++)
		{
			cin>>arr[i];
		}

		ll mx = 0;
		for(int i=0; i<s.size(); i++)
		{
			if(s[i]=='1') mx = mx + arr[i];
		}

		for(int i=0; i<s.size(); i++)
		{
			if(s[i]=='0' && s[i+1]=='1' && s[i+2]=='1')
			{
				if(arr[i+1]>arr[i+2] && arr[i+2]<arr[i])
				{
					swap(s[i],s[i+1]);
					swap(s[i+1],s[i+2]);
				}
			}
			if(s[i]=='0' && s[i+1]=='1')
			{
				if(arr[i]>arr[i+1])
				{
					swap(s[i],s[i+1]);
				} 
				else continue;
			}
			
		}
		ll mx2 = 0;
		for(int i=0; i<s.size(); i++)
		{
			if(s[i]=='1') mx2 = mx2 + arr[i];
		}
	
		// for(int i=0; i<s2.size(); i++)
		// {
		// 	if(s2[i]=='0' && s2[i+1]=='1')
		// 	{
		// 		swap(s2[i],s2[i+1]);
		// 	}
		// }
		// ll mx3=0;
		// for(int i=0; i<s2.size(); i++)
		// {
		// 	if(s2[i]=='1') mx3 = mx3 + arr[i];
		// }
		ll ans = 0;
		ans = max(mx,mx2);
		// ans = max(ans,mx3);
		
		cout<<ans<<endl;

		
	}


	return 0;
}
