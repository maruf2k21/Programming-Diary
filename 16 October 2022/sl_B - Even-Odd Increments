#include<bits/stdc++.h>
#define endl '\n'
#define ll long long int
using namespace std;


int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int tst;
    cin>>tst;
    while(tst--)
    {
        int n,query,cnt_even=0,cnt_odd=0;
        ll sumfix=0;
        cin>>n>>query;

        int arr[n];
        for(int i=0; i<n; i++)
        {
            cin>>arr[i];
            if(arr[i]%2==0)cnt_even++;
            else cnt_odd++;
            sumfix = sumfix+arr[i];
        }

        while(query--)
        {
            ll sum = sumfix;
            int type,value;
            cin>>type>>value;
            if(type==0)
            {
                sum = sum + cnt_even * value;
                if(value%2==1)
                {
                    cnt_odd = cnt_odd  + cnt_even;
                    cnt_even = 0;
                }
                cout<<sum<<endl;
                sumfix = sum;
            }
            else
            {
                sum = sum + cnt_odd * value;
                if(value%2==1)
                {
                    cnt_even = cnt_even + cnt_odd;
                    cnt_odd = 0;
                }
                cout<<sum<<endl;
                sumfix = sum;
            }
        }
    }


    return 0;
}
