#include<bits/stdc++.h>
#define endl '\n'
#define ll long long int
using namespace std;


int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int tst;
    cin>>tst;
    while(tst--)
    {
        int n,flag=0;
        cin>>n;
        int arr[n];
        for(int i=0; i<n; i++)
        {
            cin>>arr[i];
        }
        string s;
        cin>>s;
        if(n==1)cout<<"YES"<<endl;
        else
        {
            for(int i=0; i<n; i++)
            {
                for(int j=0; j<n; j++)
                {
                    if(arr[i]==arr[j])
                    {
                        if(s[j]!=s[i])
                        {
                            cout<<"NO"<<endl;
                            flag=1;
                            break;
                        }
                    }
                }
                if(flag==1)break;
            }
            if(flag==0)cout<<"YES"<<endl;
        }

    }
    return 0;
}
